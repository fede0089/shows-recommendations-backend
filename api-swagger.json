openapi: 3.0.0
info:
  title: Shows Recommendations Backend
  version: 1.0.0
servers:
  - url: http://localhost:8080
paths:
  /users/{userId}/shows/recommended:
    get:
      tags:
        - default
      summary: Get Recomemndations
      description: Get logged user's recommended shows based on her/his circle
      parameters:
        - name: userId
          in: path
          schema:
            type: integer
          required: true
          example: '1'
      responses:
        '200':
          description: OK
          headers:
            Content-Length:
              schema:
                type: integer
                example: '609'
            Content-Type:
              schema:
                type: string
                example: application/json
            Connection:
              schema:
                type: string
                example: keep-alive
          content:
            application/json:
              schema:
                type: object
              example:
                recommendations:
                  - id: '3'
                    title: Harry Potter and the Philosopher's Stone
                    genres:
                      - Fantasy
                    year: '2001'
                    cover: >-
                      https://image.tmdb.org/t/p/w500/wuMc08IPKEatf9rnMNXvIDxqP4W.jpg
                    type: MOVIE
                    positive_reviews_qty: 1
                    negative_reviews_qty: 0
                  - id: '5'
                    title: Harry Potter and the Chamber of Secrets
                    genres:
                      - Fantasy
                    year: '2002'
                    cover: >-
                      https://image.tmdb.org/t/p/w500/sdEOH0992YZ0QSxgXNIGLq1ToUi.jpg
                    type: MOVIE
                    positive_reviews_qty: 0
                    negative_reviews_qty: 1
  /users/{userId}/shows/{showId}:
    get:
      tags:
        - default
      summary: Get Show
      description: Get show's details for an logged user (with its reviews)
      parameters:
        - name: userId
          in: path
          schema:
            type: integer
          required: true
          example: '1'
        - name: showId
          in: path
          schema:
            type: integer
          required: true
          example: '1'
      responses:
        '200':
          description: OK
          headers:
            Content-Length:
              schema:
                type: integer
                example: '560'
            Content-Type:
              schema:
                type: string
                example: application/json
            Connection:
              schema:
                type: string
                example: keep-alive
          content:
            application/json:
              schema:
                type: object
              example:
                id: '1'
                title: The Gift
                genres:
                  - Thriller
                year: '2000'
                cover: >-
                  https://image.tmdb.org/t/p/w500/nQdBE1P0r4ZrgGqy5EX8sL2kXG6.jpg
                type: MOVIE
                overview: >-
                  When a local woman disappears and the police can't seem to
                  find any leads, her father turns to a poor young woman with
                  psychic powers. Slowly she starts having visions of the woman
                  chained and in a pond. Her visions lead to the body and the
                  arrest of an abusive husband, but did he really do it?
                user_review:
                  rating: 1
                  created_date: '2022-05-01T10:15:51.610892'
                positive_reviews_qty: 1
                negative_reviews_qty: 0
  /shows/{showId}:
    get:
      tags:
        - default
      summary: Get Show (Unlogged users)
      description: Get show's details for an unlogged user
      parameters:
        - name: showId
          in: path
          schema:
            type: integer
          required: true
          description: Show id
          example: '1'
      responses:
        '200':
          description: OK
          headers:
            Content-Length:
              schema:
                type: integer
                example: '437'
            Content-Type:
              schema:
                type: string
                example: application/json
            Connection:
              schema:
                type: string
                example: keep-alive
          content:
            application/json:
              schema:
                type: object
              example:
                id: '1'
                title: The Gift
                genres:
                  - Thriller
                year: '2000'
                cover: >-
                  https://image.tmdb.org/t/p/w500/nQdBE1P0r4ZrgGqy5EX8sL2kXG6.jpg
                type: MOVIE
                overview: >-
                  When a local woman disappears and the police can't seem to
                  find any leads, her father turns to a poor young woman with
                  psychic powers. Slowly she starts having visions of the woman
                  chained and in a pond. Her visions lead to the body and the
                  arrest of an abusive husband, but did he really do it?
  /users/{userId}/followedUsers/{followedUserId}:
    post:
      tags:
        - default
      summary: Follow User
      description: Add user to logged user's circle
      requestBody:
        content: {}
      parameters:
        - name: userId
          in: path
          schema:
            type: integer
          required: true
          example: '1'
        - name: followedUserId
          in: path
          schema:
            type: integer
          required: true
          example: '3'
      responses:
        '200':
          description: OK
          headers:
            Content-Length:
              schema:
                type: integer
                example: '69'
            Content-Type:
              schema:
                type: string
                example: application/json
            Connection:
              schema:
                type: string
                example: keep-alive
          content:
            application/json:
              schema:
                type: object
              example:
                followed_user_id: '3'
                followed_date: '2022-04-24T13:06:27.946070'
        '400':
          description: Bad Request
          headers:
            Content-Length:
              schema:
                type: integer
                example: '102'
            Content-Type:
              schema:
                type: string
                example: application/json
            Connection:
              schema:
                type: string
                example: keep-alive
          content:
            application/json:
              schema:
                type: object
              example:
                detail_message: User is already followed
                cause: null
                stack_trace: []
                suppressed_exceptions: []
  /users/{userId}/shows/{showId}/review/{rating}:
    post:
      tags:
        - default
      summary: Add Review
      description: Add logged user review of a show
      requestBody:
        content: {}
      parameters:
        - name: userId
          in: path
          schema:
            type: integer
          required: true
          example: '1'
        - name: showId
          in: path
          schema:
            type: integer
          required: true
          example: '1'
        - name: rating
          in: path
          schema:
            type: integer
          required: true
          description: 'Review''s rating (0: Negative, 1:Positive)'
          example: '1'
      responses:
        '200':
          description: OK
          headers:
            Content-Length:
              schema:
                type: integer
                example: '42'
            Content-Type:
              schema:
                type: string
                example: application/json
            Connection:
              schema:
                type: string
                example: keep-alive
          content:
            application/json:
              schema:
                type: object
              example:
                user_id: '1'
                show_id: '1'
                rating: 1
        '400':
          description: Bad Request
          headers:
            Content-Length:
              schema:
                type: integer
                example: '103'
            Content-Type:
              schema:
                type: string
                example: application/json
            Connection:
              schema:
                type: string
                example: keep-alive
          content:
            application/json:
              schema:
                type: object
              example:
                detail_message: Show was already reviewed
                cause: null
                stack_trace: []
                suppressed_exceptions: []
